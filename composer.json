{
  "name": "xtrella/aluvia-php-sdk",
  "type": "library",
  "description": "Official Aluvia proxy management SDK for PHP",
  "keywords": [
    "proxy",
    "aluvia",
    "http",
    "https",
    "sdk",
    "api",
    "php",
    "proxy-management",
    "web-scraping",
    "rotating-proxy",
    "sticky-sessions",
    "smart-routing"
  ],
  "homepage": "https://github.com/xtrella/aluvia-php",
  "license": "MIT",
  "authors": [
    {
      "name": "Xtrella Team",
      "email": "support@xtrella.com",
      "homepage": "https://xtrella.com"
    }
  ],
  "support": {
    "email": "support@xtrella.com",
    "issues": "https://github.com/xtrella/aluvia-php/issues",
    "source": "https://github.com/xtrella/aluvia-php",
    "docs": "https://github.com/xtrella/aluvia-php/blob/main/README.md"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.10",
    "doctrine/instantiator": "^1.5.0"
  },
  "autoload": {
    "psr-4": {
      "Aluvia\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aluvia\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "post-install-cmd": "composer dump-autoload --optimize",
    "post-update-cmd": "composer dump-autoload --optimize"
  }
}